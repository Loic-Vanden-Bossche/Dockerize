{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
    "exclude": ["node_modules", "dist"]
}
